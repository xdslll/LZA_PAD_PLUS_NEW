<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center"
    android:paddingTop="20dp" android:paddingBottom="20dp">
    <ImageView
        android:layout_width="@dimen/main_layout_menu_img_width"
        android:layout_height="@dimen/main_layout_menu_img_width"
        android:scaleType="fitXY"
        android:id="@+id/main_layout_menu_item_img"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_layout_menu_text_size"
        android:padding="5dp"
        android:id="@+id/main_layout_menu_item_text"
        />
</LinearLayout>
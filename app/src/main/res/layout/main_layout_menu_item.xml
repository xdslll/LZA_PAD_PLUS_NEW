<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/main_layout_menu_item_img"
        android:layout_width="@dimen/main_layout_menu_img_width"
        android:layout_height="@dimen/main_layout_menu_img_width"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/main_layout_menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="@dimen/main_layout_menu_text_size" />
</LinearLayout>
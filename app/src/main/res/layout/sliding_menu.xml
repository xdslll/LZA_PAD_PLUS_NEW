<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/gray_333">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/main_layout_select_module_padding"
                android:paddingRight="@dimen/main_layout_select_module_padding"
                android:textSize="@dimen/main_layout_select_module_text_size"
                android:text="@string/select_module"
                android:textColor="@color/white"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/main_layout_select_module_padding"
                android:paddingRight="@dimen/main_layout_select_module_padding"
                android:textSize="@dimen/main_layout_select_module_text_size"
                android:text="@string/refresh"
                android:textColor="@color/white"
                android:background="@drawable/common_bg"
                android:gravity="center_vertical"
                android:id="@+id/sliding_menu_refresh"
                />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:id="@+id/sliding_menu_list"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/gray_333">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/main_layout_login_status_padding"
                android:paddingRight="@dimen/main_layout_login_status_padding"
                android:textSize="@dimen/main_layout_login_status_text_size"
                android:textColor="@color/white"
                android:background="@drawable/common_bg"
                android:gravity="center_vertical"
                android:id="@+id/sliding_menu_login_status"
                />
        </LinearLayout>
    </LinearLayout>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerInParent="true" layout="@layout/common_loading_view_stub" />
</RelativeLayout>
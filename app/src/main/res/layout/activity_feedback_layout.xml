<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/feed_back_text_enter"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/feed_back_text_enter_control_height"
        android:layout_margin="15dp"
        android:background="@android:drawable/edit_text"
        android:hint="@string/content_text_empty"
        android:gravity="top"
        android:textSize="18sp"
        android:textColor="@color/black_text"
        android:textCursorDrawable="@null"
        android:maxLength="@integer/feed_back_text_enter_control_max_length" />

    <EditText
        android:id="@+id/feed_back_email_enter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@android:drawable/edit_text"
        android:hint="@string/email_text_empty"
        android:textSize="18sp"
        android:textColor="@color/black_text"
        android:textCursorDrawable="@null"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/feed_back_submit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@mipmap/ic_launcher"/>

</LinearLayout>
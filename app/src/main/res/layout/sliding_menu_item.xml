<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/sliding_menu_img"
            android:layout_width="@dimen/main_layout_module_img_width"
            android:layout_height="@dimen/main_layout_module_img_width"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/sliding_menu_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/sliding_menu_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="@string/menu_subscribe"
        android:textSize="14sp" />
</RelativeLayout>